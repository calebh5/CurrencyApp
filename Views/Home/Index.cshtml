<!-- Views/Home/Index.cshtml -->
@{
    Layout = null; // We don't need a layout for this simple example
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        h2 {
            color: #333;
            text-align: center;
        }

        hr {
            border: 1px solid #ddd;
        }

        form {
            max-width: 400px;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #333;
        }

        select,
        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }

        button {
            background-color: #4caf50;
            color: white;
            padding: 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
            font-size: 16px;
        }

            button:hover {
                background-color: #45a049;
            }

        .result,
        .error {
            margin-top: 20px;
            padding: 10px;
            border-radius: 5px;
        }

        .result {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .error {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
    </style>
</head>
<body>
    <h2>Currency Converter</h2>
    <hr />

    <form method="post" action="/Home/ConvertCurrency">
        <label for="currencyFrom">From Currency:</label>
        <select name="currencyFrom" required>
            @foreach (var currency in ViewBag.Currencies)
            {
                <option value="@currency.CurrencyCode">@currency.CurrencyCode</option>
            }
        </select>

        <label for="currencyTo">To Currency:</label>
        <select name="currencyTo" required>
            @foreach (var currency in ViewBag.Currencies)
            {
                <option value="@currency.CurrencyCode">@currency.CurrencyCode</option>
            }
        </select>

        <label for="amount">Amount:</label>
        <input type="number" step="0.01" name="amount" required />

        <button type="submit">Convert</button>
    </form>

    @if (ViewBag.ConvertedAmount != null)
    {
        <div class="result">
            <p>Converted Amount: @ViewBag.ConvertedAmount</p>
        </div>
    }
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="error">
            <p>@ViewBag.ErrorMessage</p>
        </div>
    }

    <!-- Existing content continues here -->

</body>
</html>
